<h2 class="center separator-blank">Inscription</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <label class="col-sm-4 control-label">Adresse email</label>
    <div class="col-sm-8">
    <%= f.email_field :email, class: 'form-control', placeholder: 'Adresse email', autofocus: true %>
    </div>
  </div>

  <div class="separator-blank"></div>

  <div class="form-group">
    <label class="col-sm-4 control-label">Mot de passe (6 caracteres minimum)</label>
    <div class="col-sm-8">
      <%= f.password_field :password, class: 'form-control', placeholder: 'Mot de passe (6 caracteres minimum)', autocomplete: "off" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-4 control-label">Confirmer votre mot de passe</label>
    <div class="col-sm-8">
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirmer votre mot de passe', autocomplete: "off" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-4 control-label"><%= f.label :nom %></label>
    <div class="col-sm-8">
      <%= f.text_field :nom , class: 'form-control', placeholder: 'Nom'%>

    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-4 control-label"><%= f.label :prenom %></label>
    <div class="col-sm-8">
      <%= f.text_field :prenom , class: 'form-control', placeholder: 'Prenom'%>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-4 control-label">Code postal</label>
    <div class="col-sm-8">
      <%= f.text_field :cp , class: 'form-control', placeholder: 'Code postal'%>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-4 control-label">Ville</label>
    <div class="col-sm-8">
      <%= f.text_field :adresse , class: 'form-control', placeholder: 'Ville'%>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-4 control-label"><%= f.label :telephone %></label>
    <div class="col-sm-8">
      <%= f.text_field :telephone , class: 'form-control', placeholder: 'Téléphone'%>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-4 control-label"><%= f.label :situation %></label>
    <div class="col-sm-8">
      <%= f.text_field :situation , class: 'form-control', placeholder: 'Professionnel ou particulier'%>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-4 control-label">Rayon d'intervention</label>
    <div class="col-sm-8">
      <%= f.text_field :rayonIntervention , class: 'form-control', placeholder: 'Rayon d\'intervention'%>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-4 control-label"><%= f.label :description %></label>
    <div class="col-sm-8">
      <%= f.text_area :description , class: 'form-control', placeholder: 'Description'%>
    </div>
  </div>

  <div class="form-group">
        <%= f.label :avatar, class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6">
            <%= f.file_field :avatar %>
        </div>
    </div>

  <div class="actions">
    <button class="button-sign-up" type="submit">S'inscrire</button>
    <a href="users/sign_in">Ou connectez-vous</a>
  </div>
<% end %>
