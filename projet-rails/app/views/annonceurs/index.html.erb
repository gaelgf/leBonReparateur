<p id="notice"><%= notice %></p>

<h1>Listing Annonceurs</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Email</th>
      <th>Nom</th>
      <th>Prenom</th>
      <th>Password</th>
      <th>Cp</th>
      <th>Adresse</th>
      <th>Telephone</th>
      <th>Situation</th>
      <th>Rayonintervention</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @annonceurs.each do |annonceur| %>
      <tr>
        <td><%= annonceur.email %></td>
        <td><%= annonceur.nom %></td>
        <td><%= annonceur.prenom %></td>
        <td><%= annonceur.password %></td>
        <td><%= annonceur.cp %></td>
        <td><%= annonceur.adresse %></td>
        <td><%= annonceur.telephone %></td>
        <td><%= annonceur.situation %></td>
        <td><%= annonceur.rayonIntervention %></td>
        <td class="pull-right">
          <%= link_to annonceur , class: 'btn btn-sm btn-primary' do %>
            <i class="glyphicon glyphicon-search"> Show</i>
          <% end %>
        </td>
        <td class="pull-right">
          <%= link_to edit_annonceur_path(annonceur) , class: 'btn btn-sm btn-warning' do %>
            <i class="glyphicon glyphicon-pencil"> Edit</i>
          <% end %>
        </td>
        <td class="pull-right">
          <%= link_to annonceur, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' do %>
            <i class="glyphicon glyphicon-remove"> Destroy</i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_annonceur_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"> New Annonceur</i>
<% end %>

<h1>Test</h1>

<div class="row">
  <% @annonceurs.each do |annonceur| %>
    <div class="well col-xs-4">
      <img src="http://lorempixel.com/200/200/people" alt="people" class="img-circle">
      <h2><%= annonceur.prenom %> <%= annonceur.nom %></h2>
      <h4><i class="glyphicon glyphicon-envelope"></i> <%= annonceur.email %></h4>
      <h4><i class="glyphicon glyphicon-phone"></i> <%= annonceur.telephone %></h4>
      <h4>
        <i class="glyphicon glyphicon-home"></i> <%= annonceur.adresse %>
        <br>
        <%= annonceur.cp %>
      </h4>
      <h4><i class="glyphicon glyphicon-user"></i> <%= annonceur.situation %></h4>
      <h4><i class="glyphicon glyphicon-road"></i> <%= annonceur.rayonIntervention %> km</h4>
    </div>
  <% end %>
</div>
