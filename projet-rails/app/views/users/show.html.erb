<p id="notice"><%= notice %></p>

<div class="profil">
  <div class="page-profil">
    <h1>Fiche de <%= @user.prenom %> <%= @user.nom%></h1>
  </div>
  <div class="affiche-profil">
    <div class="image-profil">
      <%= image_tag(@user.avatar.url(:medium)) %>
    </div>
    <div class="infos-profil">
      <div class="bloc-info">
        <p>Email : <%= @user.email %></p>
      </div>
      <div class="bloc-info">
        <p><i class="glyphicon glyphicon-phone"></i><%= @user.telephone %></p>
      </div>
      <div class="bloc-info">
        <p><i class="glyphicon glyphicon-home"></i><%= @user.adresse%>, <%= @user.cp%></p>
      </div>
      <div class="bloc-info">
        <p><i class="glyphicon glyphicon-user"></i><%= @user.situation%></p>
      </div>
      <div class="bloc-info">
        <p><i class="glyphicon glyphicon-road"></i><%= @user.rayonIntervention%></p>
      </div>
    </div>

</div>

<div class="profil-description">
  <h2>Description</h2>
  <p><%= @user.description %></p>
</div>
<a href="/users">Retour</a>
